<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wisense.cadal.InfoActivity"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Project realized by researchers of UniversitÃ  Politecnica delle Marche in collaboration with WiSense Srl (www.wisense.it)."
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reference: SVM-Based Fall Detection Method for Elderly People Using Android Low-Cost Smartphones. L. Pernini, A. Belli, L. Palma, S. Valenti, M. Paniccia, P. Pierleoni. IEEE SAS2015"
        android:id="@+id/textView2"
        android:textSize="12dp"
        android:layout_below="@+id/textView"

        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/univpm"
        android:src="@drawable/univpm"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:onClick="siteUnivpm"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:id="@+id/wisense"
        android:src="@drawable/logowisense"
        android:layout_below="@+id/univpm"
        android:layout_centerHorizontal="true"
        android:onClick="siteWisense"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/github"
        android:src="@drawable/git"
        android:layout_below="@+id/wisense"
        android:layout_centerHorizontal="true"
        android:onClick="siteGithub"
        android:layout_margin="10dp"/>
</RelativeLayout>
