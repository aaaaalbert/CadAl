<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wisense.cadal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.wisense.cadal.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.wisense.cadal.FallDetectionService"
            android:enabled="true"
            android:exported="false"
            android:process=":lqRemote" >
            <intent-filter>
                <action android:name="com.wisense.cadal.FallDetectionService" />
            </intent-filter>
        </service>

        <activity
            android:name="com.wisense.cadal.AlertActivity"
            android:label="@string/title_activity_alert"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
